{
    "name": "binsoul/coding-standard",
    "description": "Coding standard",
    "keywords": [
        "net",
        "hal",
        "client"
    ],
    "homepage": "https://github.com/binsoul/coding-standard",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "s.moeszler@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "phpro/grumphp-shim": "^0.21",
        "phpunit/phpunit": "^8",
        "phpstan/phpstan": "^0.12",
        "slevomat/coding-standard": "^6",
        "squizlabs/php_codesniffer": "^3",
        "symplify/easy-coding-standard": "^7"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\CodingStandard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\CodingStandard\\": "tests"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": "ecs check src --config easy-coding-standard.yaml --fix",
        "analyze": "phpstan analyse -l max src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
